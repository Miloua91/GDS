{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS_PYTHON_POETRY",
    "pyPackage": "gunicorn"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "command": "cd pharmacie && gunicorn pharmacie.wsgi:application --bind 0.0.0.0:$PORT --workers 2"
  }
}
