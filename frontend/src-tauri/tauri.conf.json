{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pharma",
  "version": "0.1.0",
  "identifier": "com.pharma.pms",
  "build": {
    "frontendDist": "../dist/client/",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Pharmacy Management System",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["icons/logo.ico"],
    "windows": {
      "wix": {
        "language": ["fr-FR", "en-US"]
      }
    }
  }
}
